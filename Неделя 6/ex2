#include<stdio.h>
void swap(int *a, int *b){
  int t;
  t=*b;
  *b=*a;
  *a=t;
}
int main(){

  printf("Write number of processes:\n");
  int n;
  scanf("%d", &n);
  int at[n],bt[n], wt[n], ct[n], tat[n];
  int avtat, avwt;
  for (int i = 0; i < n; i++) {
    printf("Enter arrival time of process %d:\n", i+1);
    scanf("%d", &at[i]);
    printf("Enter burst time of process %d:\n", i+1);
    scanf("%d", &bt[i]);
  }
 int sum=0;
 float totalTAT=0,totalWT=0;

   for(int i=0; i<n-1; i++){
    int x=i;
    for(int j=i+1; j<n; j++){
      if (bt[j]<bt[x])
      x=j;
    }
    swap(&at[x], &at[i]);
    swap(&bt[x], &bt[i]);
  }

 for(int j=0;j<n;j++)
 {
  sum+=bt[j];
  ct[j]+=sum+at[0];
 }
 for(int k=0;k<n;k++)
 {
  tat[k]=ct[k]-at[k];
  totalTAT+=tat[k];
 }
 for(int k=0;k<n;k++)
 {
  wt[k]=tat[k]-bt[k];
  totalWT+=wt[k];
 }

 printf("P#\t AT\t BT\t CT\t WT\t TAT\n");

 for(int i=0;i<n;i++)
 {
  printf("P%d\t %d\t %d\t %d\t %d\t %d\n",i+1,at[i],bt[i],ct[i],wt[i],tat[i]);
 }

 printf("\n\nAverage Turnaround Time = %f\n",totalTAT/n);
 printf("Average WT = %f\n\n",totalWT/n);

 return 0;
}
